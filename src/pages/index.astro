---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';

const steps = [
  { num: "01", title: "El Xassís", desc: "Tria la base: de la Iron 883 a la Forty-Eight.", img: "https://images.unsplash.com/photo-1558981403-c5f9109ad088?auto=format&fit=crop&q=80&w=800" },
  { num: "02", title: "Cura Detallada", desc: "Escapaments, manillars i seients d'autor.", img: "https://images.unsplash.com/photo-1558981420-c79a579a6044?auto=format&fit=crop&q=80&w=800" },
  { num: "03", title: "Pintura 3D", desc: "Acabats *flake*, mat o brillant en temps real.", img: "https://images.unsplash.com/photo-1611631562208-18579075775a?auto=format&fit=crop&q=80&w=800" },
  { num: "04", title: "Al Taller", desc: "Envia el plànol directament al teu mecànic.", img: "https://images.unsplash.com/photo-1563720223185-11003d516935?auto=format&fit=crop&q=80&w=800" }
];
---

<Layout title="Sportster Inspiration | Configurador 3D Custom">
	
	<nav class="fixed w-full z-50 px-8 py-6 flex justify-between items-center bg-zinc-950/40 backdrop-blur-xl border-b border-white/10">
		<div class="group cursor-pointer">
			<div class="font-black text-2xl tracking-tighter italic text-white group-hover:text-orange-500 transition-colors">
				SPORTSTER<span class="text-orange-600">INSPIRATION</span>
			</div>
		</div>
		<a href="#join" class="bg-orange-600 text-white px-8 py-2 rounded-full text-xs font-black uppercase tracking-widest hover:bg-white hover:text-black transition-all shadow-lg shadow-orange-600/20">Join Beta</a>
	</nav>

	<section class="relative h-screen flex items-center justify-center px-6 overflow-hidden">
		<div class="absolute inset-0 z-0">
			<div class="absolute inset-0 bg-gradient-to-tr from-zinc-950 via-zinc-950/80 to-orange-900/20 z-10"></div>
			<img src="https://images.unsplash.com/photo-1609102041953-e02808e03771?auto=format&fit=crop&q=80&w=2000" class="w-full h-full object-cover scale-105 animate-slow-zoom" alt="Harley Background" />
		</div>

		<div class="relative z-20 text-center">
			<div class="mb-6 inline-flex items-center gap-2 px-3 py-1 rounded-full border border-orange-500/30 bg-orange-500/10 text-orange-500 text-[10px] font-bold uppercase tracking-[0.2em]">
				<span class="relative flex h-2 w-2">
					<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
					<span class="relative inline-flex rounded-full h-2 w-2 bg-orange-500"></span>
				</span>
				Limited Alpha Access
			</div>
			<h1 class="text-6xl md:text-[120px] font-black mb-8 italic leading-none tracking-tighter text-white uppercase drop-shadow-2xl">
				Custom<br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-800">Without Limits.</span>
			</h1>
			<p class="text-zinc-400 text-lg md:text-xl mb-12 max-w-2xl mx-auto font-light leading-relaxed">
				L'eina definitiva per a constructors i entusiastes. Dissenya la teva Sportster en 3D amb peces reals de marques llegendàries.
			</p>
			
			<form action="https://assets.mailerlite.com/jsonp/2073020/forms/177926962836145822/subscribe" method="POST" class="p-2 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl md:rounded-full max-w-lg mx-auto flex flex-col md:flex-row gap-2 shadow-2xl">
				<input 
					type="email" 
					name="fields[email]"
					placeholder="El teu millor correu..." 
					class="bg-transparent px-8 py-4 rounded-full w-full outline-none text-white placeholder:text-zinc-500 font-medium" 
					required 
				/>
				<button type="submit" class="bg-orange-600 hover:bg-orange-500 text-white font-black py-4 px-10 rounded-full transition-all hover:scale-105 uppercase tracking-tighter text-sm whitespace-nowrap">
					Get Early Access
				</button>
			</form>
		</div>
	</section>

	<section class="py-32 bg-zinc-950">
		<div class="max-w-7xl mx-auto px-6">
			<h2 class="text-zinc-800 text-7xl md:text-9xl font-black mb-20 opacity-20 italic uppercase tracking-tighter text-center">Process</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
				{steps.map(step => (
					<div class="relative group h-[500px] overflow-hidden rounded-3xl border border-white/5 bg-zinc-900 shadow-2xl">
						<img src={step.img} class="absolute inset-0 w-full h-full object-cover opacity-40 group-hover:opacity-100 group-hover:scale-110 transition-all duration-700 grayscale group-hover:grayscale-0" />
						<div class="absolute inset-0 bg-gradient-to-t from-zinc-950 via-zinc-950/40 to-transparent"></div>
						<div class="absolute bottom-0 p-8">
							<div class="text-orange-500 font-black text-5xl mb-2 italic">{step.num}</div>
							<h3 class="text-2xl font-bold text-white uppercase italic mb-2 tracking-tighter">{step.title}</h3>
							<p class="text-zinc-400 text-sm leading-relaxed opacity-0 group-hover:opacity-100 transition-opacity duration-500">{step.desc}</p>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>
</Layout>

<style>
	@keyframes slow-zoom {
		0% { transform: scale(1); }
		100% { transform: scale(1.1); }
	}
	.animate-slow-zoom {
		animation: slow-zoom 20s linear infinite alternate;
	}
</style>
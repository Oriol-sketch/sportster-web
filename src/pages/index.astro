<script define:vars={{ translations }}>
	const selector = document.getElementById('langSelector');
	function update(lang) {
		const d = translations[lang] || translations['en'];
		document.querySelectorAll('[data-key]').forEach(el => el.innerText = d[el.getAttribute('data-key')]);
		document.querySelectorAll('[data-key-placeholder]').forEach(el => el.placeholder = d[el.getAttribute('data-key-placeholder')]);
		selector.value = lang;
	}
	const nLang = navigator.language.split('-')[0];
	update(['en','es','de','it','fr'].includes(nLang) ? nLang : 'en');
	selector.addEventListener('change', (e) => update(e.target.value));
</script>
---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Cookies Policy | Sportster Inspiration">
    <section class="max-w-3xl mx-auto px-6 py-32 min-h-screen">
        <h1 class="text-5xl md:text-7xl font-black italic uppercase mb-12 tracking-tighter text-white">
            <span data-key="cookTitleMain">COOKIES</span> <span class="text-orange-600" data-key="cookTitleSub">POLICY</span>
        </h1>
        
        <div class="text-zinc-400 space-y-8 font-light leading-relaxed text-sm md:text-base">
            <p data-key="cookIntro"></p>
            
            <div class="space-y-4">
                <h2 class="text-white font-bold uppercase tracking-wider text-lg" data-key="cookS1Title">1. ¿QUÉ SON LAS COOKIES?</h2>
                <p data-key="cookS1Desc"></p>
            </div>

            <div class="space-y-4">
                <h2 class="text-white font-bold uppercase tracking-wider text-lg" data-key="cookS2Title">2. COOKIES QUE UTILIZAMOS</h2>
                <p data-key="cookS2Desc"></p>
            </div>

            <div class="space-y-4">
                <h2 class="text-white font-bold uppercase tracking-wider text-lg" data-key="cookS3Title">3. CONTROL DE COOKIES</h2>
                <p data-key="cookS3Desc"></p>
            </div>
        </div>

        <a href="/" class="inline-block mt-20 border-b border-orange-600 text-orange-600 pb-1 font-black uppercase text-xs tracking-[0.3em] hover:text-white hover:border-white transition-all" data-key="backToGarage">
            ← BACK TO GARAGE
        </a>
    </section>
</Layout>